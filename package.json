{
  "name": "tech-radar",
  "private": true,
  "version": "0.1.0",
  "description": "Punk Link Tech Radar static site",
  "license": "MIT",
  "scripts": {
    "serve": "serve -l 5173 radar",
    "tw:build": "tailwindcss -i ./radar/styles/input.css -o ./radar/styles/output.css --minify",
    "tw:watch": "tailwindcss -i ./radar/styles/input.css -o ./radar/styles/output.css -w",
    "dev": "concurrently -k -n tw,serve \"yarn:tw:watch\" \"yarn:serve\"",
    "preview": "yarn tw:build && serve radar"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.2.3",
    "tailwindcss": "^3.4.14"
  }
}
